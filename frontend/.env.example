# ===========================================
# REACT FRONTEND ENVIRONMENT CONFIGURATION
# ===========================================

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_API_TIMEOUT=30000

# Application Settings
REACT_APP_NAME=Noise Pollution Detection System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=AI-powered noise pollution detection and analysis

# Upload Settings
REACT_APP_MAX_FILE_SIZE=50MB
REACT_APP_ALLOWED_FILE_TYPES=audio/wav,audio/mpeg,audio/flac,audio/x-m4a

# UI Configuration
REACT_APP_THEME_PRIMARY_COLOR=#1976d2
REACT_APP_THEME_SECONDARY_COLOR=#dc004e
REACT_APP_THEME_MODE=light

# Analytics & Monitoring (if needed)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# REACT_APP_SENTRY_DSN=your-sentry-dsn

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_HISTORY=true
REACT_APP_ENABLE_REAL_TIME=false

# Development Settings
GENERATE_SOURCEMAP=true
BROWSER=chrome

# Build Settings
BUILD_PATH=build
PUBLIC_URL=/

# WebSocket Configuration (if real-time features are enabled)
# REACT_APP_WS_URL=ws://localhost:8000/ws/

# PWA Settings
REACT_APP_ENABLE_PWA=false
REACT_APP_MANIFEST_NAME=Noise Detection App
REACT_APP_MANIFEST_SHORT_NAME=NoiseDetect
